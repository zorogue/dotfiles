{
  "name": "Zorogue's Little Snitch Rule Group",
  "description": "My personal rules.",
  "rules": [
    {
      "action": "allow",
      "process": "/Applications/Little Snitch.app/Contents/Components/Little Snitch Software Update.app/Contents/MacOS/Little Snitch Software Update",
      "remote-domains": "obdev.at"
    },
    {
      "action": "allow",
      "process": "/Library/Application Support/Objective Development/Little Snitch/Components/at.obdev.littlesnitch.daemon.bundle/Contents/XPCServices/at.obdev.littlesnitch.networking.xpc/Contents/MacOS/at.obdev.littlesnitch.networking",
      "remote-domains": ["githubusercontent.com", "obdev.at"]
    },
    {
      "action": "allow",
      "process": "identifier.APPLE/com.apple.Terminal",
      "via": "path.opt/homebrew/Cellar/git/*/libexec/git-core/git-remote-http",
      "remote-domains": "github.com"
    },
    {
      "action": "allow",
      "process": "/Applications/Safari.app/Contents/MacOS/Safari"
    },
    {
      "action": "allow",
      "process": "/Applications/Resilio Sync.app/Contents/MacOS/Resilio Sync",
      "direction": "incoming"
    },
    {
      "action": "allow",
      "process": "/Applications/Resilio Sync.app/Contents/MacOS/Resilio Sync",
      "direction": "outgoing"
    },
    {
      "action": "allow",
      "process": "/Applications/OneDrive.app/Contents/MacOS/OneDrive",
      "remote-domains": ["microsoft.com", "sharepoint.com", "microsoftpersonalcontent.com", "trafficmanager.net", "windows.net", "live.com", "onedrive.com", "office.com", "sfx.ms"]
    },
    {
      "action": "allow",
      "process": "/Applications/Splashtop Personal.app/Contents/MacOS/Splashtop Personal",
      "remote-domains": "splashtop.com"
    },
    {
      "action": "allow",
      "process": "/Applications/Splashtop Streamer.app/Contents/MacOS/SRStreamerDaemon",
      "remote-domains": "splashtop.com"
    },
    {
      "action": "deny",
      "process": "/Applications/Visual Studio Code.app/Contents/MacOS/Electron"
    },
    {
      "action": "allow",
      "process": "/System/Applications/Music.app/Contents/MacOS/Music",
      "remote-domains": "cddbp.net"
    },
    {
      "action": "allow",
      "process": "identifier.APPLE/com.apple.mail",
    },
    {
      "action": "deny",
      "process": "identifier.APPLE/com.apple.mail"
    },
    {
      "action": "allow",
      "process": "identifier.MXGJJ98X76/com.valvesoftware.steam",
      "remote-domains": ["steampowered.com", "steamserver.net", "steamstatic.com"]
    }
  ]
}